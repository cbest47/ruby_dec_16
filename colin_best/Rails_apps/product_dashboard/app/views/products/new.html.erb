<h1>Make a new product!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<%= form_for @product do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name, placeholder: "Name" %> <br />

  <%= f.label :description %>:
  <%= f.text_field :description, placeholder: "Description" %> <br />

  <%= f.label :price %>:
  <%= f.number_field :price, placeholder: "Price" %> <br />

  <%= f.submit %>
<% end %>
<%= link_to 'HOME', :back %>
